<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:backgroundTint="@color/orange_background"
    android:hapticFeedbackEnabled="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            >

            <Button
                android:id="@+id/backbutton"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:contentDescription="@string/patras"
                android:onClick="startSecondActivity"
                app:cornerRadius="50dp"
                app:icon="@drawable/car_ui_icon_arrow_back" />

            <Space
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="76dp"
                android:layout_height="71dp"
                android:layout_gravity="right|top|fill_vertical"
                android:src="@drawable/logo" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="New Fortess"
            android:textColor="@color/orange"
            android:textSize="34sp" />



        <HorizontalScrollView
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout

                android:layout_width="910dp"
                android:layout_height="202dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="380dp"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:src="@drawable/newfortess1" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="550dp"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:src="@drawable/newfortess2" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="550dp"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:src="@drawable/newfortess3" />

            </LinearLayout>
        </HorizontalScrollView>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Τhe New Fortress is located on the north-western part of the Old Town, on the Hill of St Markos, above the old port.
It was built with earthworks that were piled up from nearby areas, and lined with carved stones that were collected mainly from the material of the ancient city of Corfu (Paleopolis). Its Gate is decorated with a magnificent relief of the Lion of St. Mark, the emblem of Venice.
The New fortress is organised in two levels, the lower and the upper level. On the lower level, which includes a pentagonal salient, an additional salient and the little fort of ”Punta Perpetua”, stands an imposing three-storey building  dating back to the 19th century, currently in use as a nautical base. The upper level of the fortifications is formed by two salients on the west side, the salients of the ”Seven Winds”.
"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="145dp" />

        <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

            <ImageButton
        android:id="@+id/link1"
        android:layout_width="51dp"
        android:layout_height="45dp"
        android:background="@drawable/link_512"
        android:gravity="left|bottom"></ImageButton>

            <Space
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

    <ImageButton
        android:id="@+id/link2"
        android:layout_width="51dp"
        android:layout_height="45dp"
        android:background="@drawable/link_512"
        android:gravity="center"></ImageButton>

            <Space
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/link3"
                android:layout_width="51dp"
                android:layout_height="45dp"
                android:background="@drawable/link_512"
                android:gravity="center"></ImageButton>


    </LinearLayout>



    </LinearLayout>



</ScrollView>