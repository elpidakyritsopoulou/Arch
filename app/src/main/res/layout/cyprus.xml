<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_background">

    <Button
        android:id="@+id/backbutton"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:cornerRadius="50dp"
        app:icon="@drawable/car_ui_icon_arrow_back"
        android:onClick="startSecondActivity"/>

    <ScrollView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange_background"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/Nicosia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="CYPRUS "
                android:textColor="@color/orange"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Nicosia"
                android:textSize="45dp" />

            <ImageView
                android:id="@+id/nicosiaphoto"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/nicosia" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Limassol"
                android:textSize="45dp" />

            <ImageView
                android:id="@+id/limassolphoto"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/limassol_castle_cover" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Larnaka"
                android:textSize="45dp" />

            <ImageView
                android:id="@+id/larnakaphoto"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/larnaka"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Paphos"
                android:textSize="45sp" />

            <ImageView
                android:id="@+id/paphosphoto"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/paphos" />



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>